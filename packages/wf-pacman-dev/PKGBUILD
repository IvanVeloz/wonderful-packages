pkgname=wf-pacman-dev
pkgver=0.1.0
pkgrel=2
epoch=
pkgdesc="Pacman package development scripts"
arch=(any)
url="https://github.com/WonderfulToolchain/wonderful-packages/"
license=("MIT")
depends=()
makedepends=()
options=(!strip)

. "/wf/config/runtime-env-vars.sh"

package() {
	mkdir -p "$pkgdir$WF_DESTDIR"
	mkdir -p "$pkgdir$WF_DESTDIR"/lib/wf-pacman
	cp -a /wf/config/* "$pkgdir$WF_DESTDIR"/lib/wf-pacman/
}
